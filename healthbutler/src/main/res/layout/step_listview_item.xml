<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <TextView 
        android:id="@+id/tv_step_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="#aaaaaa"
        android:text="17:00~18:01"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <ImageView 
            android:id="@+id/img_run"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icn_walk"
            android:layout_marginLeft="15dp"
            />
        <TextView 
            android:id="@+id/tv_lv_step_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textSize="18dp"
            android:textColor="#333333"
            android:text="8000步"
            android:layout_gravity="center_vertical"
            />
        <TextView 
            android:id="@+id/tv_lv_step_caloria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="18dp"
            android:textColor="#333333"
            android:text="150.66k卡"
            android:layout_gravity="center_vertical"
            />
        <TextView 
            android:id="@+id/tv_lv_step_times"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="18dp"
            android:textColor="#333333"
            android:text="61.2分钟"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

</LinearLayout>
