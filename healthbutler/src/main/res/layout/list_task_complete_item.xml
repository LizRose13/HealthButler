<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/shape2_grey"
    android:weightSum="1">


    <ImageView
        android:id="@+id/iv_not_complete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/done_nangua_white" />


    <TextView
        android:id="@+id/done_textview"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="12dp"
        android:text="New Text"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/iv_done_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/done_textview"
        android:layout_marginRight="15dp"
        android:background="@drawable/lajitong_2" />


</RelativeLayout>
