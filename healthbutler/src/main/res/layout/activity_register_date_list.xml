<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#35b4c2">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择门诊预约时间"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:weightSum="1">


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/rg_registerDate"
            android:weightSum="1">

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="2016-07-29星期五上午     剩余号量5个，当前排队人数0人"
                android:textSize="12dp"
                android:textColor="@color/grgray"
                android:id="@+id/rb_regi_date1"
                android:layout_gravity="center_horizontal" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="2016-08-05星期五上午     剩余号量5个，当前排队人数0人"
                android:textSize="12dp"
                android:textColor="@color/grgray"
                android:id="@+id/rb_regi_date2"
                android:layout_gravity="center_horizontal" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="2016-08-12星期五上午     剩余号量5个，当前排队人数0人"
                android:textSize="12dp"
                android:textColor="@color/grgray"
                android:id="@+id/rb_regi_date3"
                android:layout_gravity="center_horizontal" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-08-12星期五下午     剩余号量5个，当前排队人数0人"
                android:textSize="12dp"
                android:textColor="@color/grgray"
                android:id="@+id/rb_regi_date4" />
        </RadioGroup>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#ffb65c"
            card_view:cardCornerRadius="10dp"
            android:textSize="12dp"
            android:id="@+id/cv_register_confirm"
            android:textColor="@color/grgray"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardUseCompatPadding="true"
            card_view:contentPadding="10dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="确认"
                android:id="@+id/tv_register"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </android.support.v7.widget.CardView>




    </LinearLayout>

</LinearLayout>
