<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="今日记录"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:background="@drawable/sport_map_details"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >


            <TextView
                android:id="@+id/tv_step_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="#000000"
                android:text="3"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/tv_step_bu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_step_count"
                android:layout_toRightOf="@id/tv_step_count"
                android:padding="5dp"
                android:text="顿"
                android:textColor="#888888"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_minute_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="#000000"
                android:text="23"
                android:layout_marginLeft="45dp"
                android:layout_toRightOf="@id/tv_step_count"
                />

            <TextView
                android:id="@+id/tv_minute_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_minute_count"
                android:layout_toRightOf="@id/tv_minute_count"
                android:padding="5dp"
                android:text="道菜"
                android:textColor="#888888"
                android:textSize="15dp" />

        </RelativeLayout>
        <View
            android:layout_width="300dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_horizontal"
            android:background="#aaaaaa"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            >
            <RelativeLayout
                android:id="@+id/rl_distance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="23dp"
                    android:text="6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/tv_distance_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555555"
                    android:textSize="13dp"
                    android:text="素"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv_distance"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_speed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/rl_distance"
                android:layout_marginRight="25dp">

                <TextView
                    android:id="@+id/tv_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="23dp"
                    android:text="18"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/tv_speed_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555555"
                    android:textSize="13dp"
                    android:text="荤菜"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv_speed"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_caloria"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/rl_distance"
                android:layout_marginLeft="25dp">

                <TextView
                    android:id="@+id/tv_caloria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="23dp"
                    android:text="60"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/tv_caloria_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555555"
                    android:textSize="13dp"
                    android:text="热量(kcal)"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv_caloria"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="本周记录"/>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:background="@drawable/sport_map_details"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >


            <TextView
                android:id="@+id/tv_step_countl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="#000000"
                android:text="18"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/tv_step_bul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_step_countl"
                android:layout_toRightOf="@id/tv_step_countl"
                android:padding="5dp"
                android:text="顿"
                android:textColor="#888888"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_minute_countl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="#000000"
                android:text="50"
                android:layout_marginLeft="45dp"
                android:layout_toRightOf="@id/tv_step_countl"
                />

            <TextView
                android:id="@+id/tv_minute_minl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_minute_countl"
                android:layout_toRightOf="@id/tv_minute_countl"
                android:padding="5dp"
                android:text="道"
                android:textColor="#888888"
                android:textSize="15dp" />

        </RelativeLayout>
        <View
            android:layout_width="300dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_horizontal"
            android:background="#aaaaaa"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            >
            <RelativeLayout
                android:id="@+id/rl_distancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tv_distancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="23dp"
                    android:text="20"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/tv_distance_kml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555555"
                    android:textSize="13dp"
                    android:text="素"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv_distancel"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_speedl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/rl_distancel"
                android:layout_marginRight="25dp">

                <TextView
                    android:id="@+id/tv_speedl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="23dp"
                    android:text="30"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/tv_speed_kml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555555"
                    android:textSize="13dp"
                    android:text="荤菜"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv_speedl"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_calorial"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/rl_distancel"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/tv_calorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="23dp"
                    android:text="1250"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/tv_caloria_kmm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555555"
                    android:textSize="13dp"
                    android:text="热量(kcal)"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv_calorial"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="提示：最近吃的合适，希望继续保持"/>

</LinearLayout>
