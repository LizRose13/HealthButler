<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".health.MainActivity" >



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="150dp"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:background="@color/primary"
            android:layout_gravity="center_horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="身高"
                android:layout_marginLeft="70dp"
                android:textColor="@color/white"
                android:id="@+id/textView2"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_task_detail"
                android:layout_alignTop="@+id/textView2"
                android:entries="@array/high"
                android:layout_toRightOf="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cm"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:id="@+id/textView3"
                android:layout_alignBottom="@+id/textView2"
                android:layout_toRightOf="@+id/et_task_detail"
                android:layout_toEndOf="@+id/et_task_detail" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:layout_marginTop="10dp"
            android:background="@color/primary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="体重"
                android:layout_marginLeft="70dp"
                android:textColor="@color/white"
                android:id="@+id/textView4"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText1"
                android:entries="@array/weight"
                android:layout_alignTop="@+id/textView4"
                android:layout_toRightOf="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:id="@+id/textView5"
                android:layout_alignBottom="@+id/textView4"
                android:layout_toRightOf="@+id/editText1"
                android:layout_toEndOf="@+id/editText1" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>